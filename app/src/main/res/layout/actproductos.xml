<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:weightSum="1">

            <ScrollView
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:id="@+id/scrollView2"
                android:layout_weight="0.70" >

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#ffffff"
                        android:textAlignment="center" />

                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Sucursal"
                        android:id="@+id/textView4"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#ffffff"
                        android:background="#333333"
                        android:textAlignment="center" />

                    <EditText
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/regProductoSucursal"
                        android:layout_gravity="center_horizontal"
                        android:textAlignment="center"
                        android:textColor="#393939"
                        android:maxLength="40"
                        android:maxLines="1"/>

                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Nombre"
                        android:id="@+id/textView5"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#ffffff"
                        android:background="#333333"
                        android:textAlignment="center" />

                    <EditText
                        android:layout_width="300dp"
                        android:layout_height="44dp"
                        android:id="@+id/regProductoNombre"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#393939"
                        android:textAlignment="center"
                        android:maxLength="40" />
                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Precio"
                        android:id="@+id/textView7"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#ffffff"
                        android:background="#333333"
                        android:textAlignment="center" />

                    <EditText
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/regProductoPrecio"
                        android:layout_gravity="center_horizontal"
                        android:textAlignment="center"
                        android:textColor="#393939"
                        android:maxLength="25"
                        android:maxLines="1"/>
                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="CategorÃ­a"
                        android:id="@+id/regProductoTV"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#ffffff"
                        android:background="#333333"
                        android:textAlignment="center" />

                    <EditText
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/regProductoCategoria"
                        android:textAlignment="center"
                        android:textColor="#393939"
                        android:maxLength="40" />
                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Descripcion"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#ffffff"
                        android:background="#333333"
                        android:textAlignment="center" />

                    <EditText
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/regProductoDescripcion"
                        android:textAlignment="center"
                        android:textColor="#393939"
                        android:maxLength="100" />

                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Provedor"
                        android:id="@+id/textView6"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#ffffff"
                        android:background="#333333"
                        android:textAlignment="center" />

                    <EditText
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/regProductoProvedor"
                        android:layout_gravity="center_horizontal"
                        android:textAlignment="center"
                        android:textColor="#393939"
                        android:maxLength="40"
                        android:maxLines="1"/>
                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Cant. Disponible"
                        android:id="@+id/textView8"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#ffffff"
                        android:background="#333333"
                        android:textAlignment="center" />

                    <EditText
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/regProductoCantidad"
                        android:layout_gravity="center_horizontal"
                        android:textAlignment="center"
                        android:textColor="#393939"
                        android:maxLines="1"/>
                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Exento"
                        android:id="@+id/textView9"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#ffffff"
                        android:background="#333333"
                        android:textAlignment="center" />

                    <EditText
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/regProductoExento"
                        android:layout_gravity="center_horizontal"
                        android:textAlignment="center"
                        android:textColor="#393939"
                        android:maxLength="10"
                        android:maxLines="1"/>



                </LinearLayout>
            </ScrollView>

            <Button
                android:layout_width="50dp"
                android:layout_marginLeft="5dp"
                android:layout_height="92dp"
                android:text="Add"
                android:id="@+id/btnAdd0"
                android:layout_gravity="center_vertical"
                android:background="#cf3767"
                android:textColor="#ffffff"
                android:clickable="true"
                android:elegantTextHeight="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:enabled="true"
                android:typeface="monospace"
                android:onClick="onClick"/>
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>