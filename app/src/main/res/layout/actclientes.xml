<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:background="#dadcee">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="447dp"
        android:layout_gravity="center_horizontal"
        android:layout_weight="1.18"
        android:background="#dadcee">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#dadcee">


            <ScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/scrollView"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true">

                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:background="#ffffff">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text="Registro de cliente"
                        android:id="@+id/textView11"
                        android:textColor="#000000"
                        android:textAlignment="center"
                        android:layout_gravity="center_horizontal"/>

                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Número de Cedula"
                        android:id="@+id/textView4"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#ffffff"
                        android:background="#333333"
                        android:textAlignment="center" />

                    <EditText
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/regClienteCedula"
                        android:layout_gravity="center_horizontal"
                        android:hint="Format: 116040975"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:maxLength="25"
                        android:maxLines="1"
                        android:textColorHint="#7a7a7a" />

                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Usuario"
                        android:id="@+id/textView12"
                        android:textColor="#ffffff"
                        android:background="#333333"
                        android:textAlignment="center" />

                    <EditText
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/regClienteUsuario"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:maxLength="40"
                        android:maxLines="1"/>

                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Contraseña"
                        android:id="@+id/textView13"
                        android:textColor="#ffffff"
                        android:background="#333333"
                        android:textAlignment="center"  />

                    <EditText
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:ems="10"
                        android:id="@+id/regClienteContraseña"
                        android:textColor="#000000"
                        android:maxLength="20"
                        android:textAlignment="center"
                        android:maxLines="1"/>

                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Nombre"
                        android:id="@+id/textView5"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#ffffff"
                        android:autoText="false"
                        android:background="#333333"
                        android:textAlignment="center" />

                    <EditText
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/regClienteNombre"
                        android:layout_gravity="center_horizontal"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:maxLines="1"
                        android:maxLength="40"/>

                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Primer apellido"
                        android:id="@+id/textView6"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#ffffff"
                        android:background="#333333"
                        android:textAlignment="center" />

                    <EditText
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/regClientePrimerA"
                        android:layout_gravity="center_horizontal"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:maxLines="1"
                        android:maxLength="40"/>

                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Segundo Apellido"
                        android:id="@+id/textView7"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#ffffff"
                        android:background="#333333"
                        android:textAlignment="center" />

                    <EditText
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/regClienteSegundoA"
                        android:layout_gravity="center_horizontal"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:maxLines="1"
                        android:maxLength="40"/>

                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Fecha Nacimiento"
                        android:id="@+id/textView9"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#ffffff"
                        android:background="#333333"
                        android:textAlignment="center" />

                    <EditText
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/regClienteNacimiento"
                        android:layout_gravity="center_horizontal"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:maxLines="1"
                        android:maxLength="20"/>

                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Teléfono Celular"
                        android:id="@+id/textView10"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#ffffff"
                        android:background="#333333"
                        android:textAlignment="center" />

                    <EditText
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        android:ems="10"
                        android:id="@+id/regClienteTelefono"
                        android:layout_gravity="center_horizontal"
                        android:hint="Format: 86509736"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:maxLines="1"
                        android:textColorHint="#7a7a7a"
                        android:maxLength="25"/>
                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Provincia"
                        android:id="@+id/textView8"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#ffffff"
                        android:background="#333333"
                        android:textAlignment="center" />

                    <EditText
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/regClienteProvincia"
                        android:layout_gravity="center_horizontal"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:maxLines="1"
                        android:maxLength="40"/>
                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Cantón"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#ffffff"
                        android:background="#333333"
                        android:textAlignment="center" />

                    <EditText
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/regClienteCanton"
                        android:layout_gravity="center_horizontal"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:maxLines="1"
                        android:maxLength="40"/>
                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Distrito"
                        android:layout_gravity="center_horizontal"
                        android:textColor="#ffffff"
                        android:background="#333333"
                        android:textAlignment="center"/>

                    <EditText
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/regClienteDistrito"
                        android:layout_gravity="center_horizontal"
                        android:textAlignment="center"
                        android:textColor="#000000"
                        android:maxLines="1"
                        android:maxLength="40"/>
                    <TextView
                        android:layout_width="300dp"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceLarge"
                        android:text=" "
                        android:textColor="#000000"
                        android:textAlignment="center"
                        android:layout_gravity="center_horizontal"/>


                </LinearLayout>
            </ScrollView>

            <Button
                android:layout_width="50dp"
                android:layout_marginLeft="5dp"
                android:layout_height="92dp"
                android:text="Add"
                android:id="@+id/button"
                android:layout_gravity="center_vertical"
                android:background="#cf3767"
                android:textColor="#ffffff"
                android:clickable="true"
                android:elegantTextHeight="false"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:enabled="true"
                android:typeface="monospace"
                android:onClick="onClick"/>

        </LinearLayout>


    </RelativeLayout>
</LinearLayout>