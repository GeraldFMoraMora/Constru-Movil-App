<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.geraldf.constru_movil">
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".ConstruMainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">

        </activity>
        <activity
            android:name="com.example.geraldf.constru_movil.RegCategoria"
            android:screenOrientation="portrait"
            android:label="@string/reg_categorias">
        </activity>
        <activity
            android:name="com.example.geraldf.constru_movil.RegClientes"
            android:screenOrientation="portrait"
            android:label="@string/reg_clientes">
        </activity>
        <activity
            android:name="com.example.geraldf.constru_movil.RegPedidos"
            android:screenOrientation="portrait"
            android:label="@string/reg_pedidos">
        </activity>
        <activity
            android:name="com.example.geraldf.constru_movil.RegProductos"
            android:screenOrientation="portrait"
            android:label="@string/reg_productos">
        </activity>
        <activity
            android:name="com.example.geraldf.constru_movil.RegProveedores"
            android:screenOrientation="portrait"
            android:label="@string/reg_proveedores">
        </activity>
        <activity
            android:name="com.example.geraldf.constru_movil.RegVendedores"
            android:screenOrientation="portrait"
            android:label="@string/reg_vendedores">
        </activity>
        <activity
            android:name=".ViewProductos"
            android:screenOrientation="portrait"
            android:label="@string/reg_productos">
        </activity>
        <activity
            android:name=".ViewCatalogo"
            android:screenOrientation="portrait"
            android:label="@string/view_catalogo">
        </activity>
        <activity
            android:name=".ViewPedidos"
            android:screenOrientation="portrait"
            android:label="@string/view_pedidos">
        </activity>
        <activity
            android:name=".ViewLoginCliente"
            android:screenOrientation="portrait"
            android:label="@string/login_clientes">
        </activity>
        <activity
            android:name=".ViewLoginVendedor"
            android:screenOrientation="portrait"
            android:label="@string/login_vendedores">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>